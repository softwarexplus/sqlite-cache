{
    "name": "sqlite-cache",
    "version": "0.0.1",
    "description": "A simple SQLite cache for Node.js applications",
    "author": "xcfio",
    "homepage": "https://github.com/softwarexplus/sqlite-cache#readme",
    "main": "out/index.js",
    "license": "MIT",
    "scripts": {
        "fmt": "prettier --config=.prettierrc --write src/",
        "lint": "prettier --config=.prettierrc --check src/",
        "build": "(node --eval \"require('node:fs').rmSync('out', { recursive: true, force: true })\" || true) && tsc",
        "test": "tsc --noEmit",
        "dev": "tsc --watch"
    },
    "keywords": [
        "cache",
        "sqlite"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/softwarexplus/sqlite-cache"
    },
    "bugs": {
