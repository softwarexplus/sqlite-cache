    },
    "funding": {
        "type": "patreon",
        "url": "https://www.patreon.com/xcfio"
    },
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "devDependencies": {
        "@types/node": "^24.0.10"
    }
}
